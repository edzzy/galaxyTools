<tool id="normalisation" name="Normalisation" version="1.0.1">
  <description>for miccroarray matrix expression</description>
  <command interpreter="Rscript">normalisation.R -m ${input_matrix.file_name} -n ${methodNorm.value} -o ${out_file.file_name}
	#if $log.value == True:
		-l
	#end if
  </command>

  <inputs>
      <param name="input_matrix" type="data" format="tabular" label="Dataset matrix"/>
       <param name="methodNorm" type="select" label="Method normalization" value="L">
          <option value="L">Lowess</option>
          <option value="Q">Quantile</option>
        </param>
	<param name="log" type="boolean" label="log transform data" help="use this option if your data are not already in log"/>
  </inputs>

		

  <outputs>
    <data format="tabular" name="out_file" value="matNorm.txt" label="Matrice output"/>
  </outputs>

    <tests>
        <test>
        </test>
    </tests>
<help>

</help>
</tool>
