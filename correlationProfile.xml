<tool id="corpmedian" name="Correlation Median" version="1.0.1">
  <description>for miccroarray matrix expression</description>
  <command interpreter="Rscript">correlation.R ${input.file_name} ${log.value} ${out_img.file_name}</command>

  <inputs>
	<param name="input" type="data" format="tabular" label="Dataset matrix"/>
	<param name="out_prefix"  value="Correlation" type="text" label="Title for the output file" size ="80" />
  	<param name="log" type="boolean" truevalue="TRUE" falsevalue="FALSE" checked="false" label="Log transformed data" help="Use this option if your data areinot already in log." />
  </inputs>


  <outputs>
	  <data format="png" name="out_img" label="corelation_${out_prefix}.png" />
  </outputs>

    <tests>
        <test>
        </test>
    </tests>
<help>

</help>
</tool>

